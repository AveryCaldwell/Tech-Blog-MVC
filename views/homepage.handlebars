<!-- Loop over each object in the posts array -->
{{#if posts}}
<h2 id="homepage-title">Posts</h2>
<div class="home-card card">
    <div class="card-body">
        {{#each posts}}
        <div class="card-header">
            <a id="home-post-link" class="card-title" href="/posts/{{id}}">{{title}} - {{format_date
                date_created}}</a>
        </div>
        </br>
        <p id="home-post-content" class="card-text">{{content}}</p>
        </br>
        <p class="card-subtitle mb-2 text-muted home-user">Posted by {{user.username}} on {{format_date date_created}}
        </p>
        </br>
        {{/each}}
    </div>
</div>
</br>
{{else}}
<p>No posts have been created yet.</p>
{{/if}}